package cryptography;

import javax.swing.JOptionPane;
import javax.swing.JPasswordField;
import javax.swing.ImageIcon;
import java.awt.Image;

public class PasswordDialog {
    public static String showDialog() {
        JPasswordField passwordField = new JPasswordField();
        try {
            int option = JOptionPane.showOptionDialog(
                    null,
                    passwordField,
                    "Enter your password",
                    JOptionPane.OK_CANCEL_OPTION,
                    JOptionPane.PLAIN_MESSAGE,
                    new ImageIcon(getResizedIcon("path/to/your/icon.png", 50, 50)),
                    null,
                    null);

            if (option == JOptionPane.OK_OPTION) {
                return new String(passwordField.getPassword());
            }
        } catch (NullPointerException e) {
            // User closed the dialog without entering a password
            JOptionPane.showMessageDialog(null, "Password input canceled.", "Error", JOptionPane.ERROR_MESSAGE);
            return null;
        }
        return null;
    }

    private static Image getResizedIcon(String path, int width, int height) {
        ImageIcon icon = new ImageIcon(path);
        Image image = icon.getImage();
        Image resizedImage = image.getScaledInstance(width, height, Image.SCALE_SMOOTH);
        return resizedImage;
    }
}
